# Environment Selection
ENVIRONMENT=local  # or 'production'

# GCP Configuration (production only)
GCP_PROJECT_ID=your-project-id

# Snowflake Connection Settings
SNOWFLAKE_USER=SVC_POPFLY_APP
SNOWFLAKE_ACCOUNT=your-account-identifier
SNOWFLAKE_WAREHOUSE=your-warehouse
SNOWFLAKE_DATABASE=PF
SNOWFLAKE_SCHEMA=BI
SNOWFLAKE_ROLE=your-role
SNOWFLAKE_PRIVATE_KEY_PATH=auth/snowflake_key.pem  # local only

# Open WebUI Integration
OPEN_WEBUI_API_KEY=your-api-key-from-open-webui

# MCP Server Settings
MCP_SERVER_NAME=snowflake-mcp
MCP_SERVER_PORT=3000
MCP_MAX_QUERY_TIMEOUT=30
MCP_DEFAULT_LIMIT=1000
MCP_MAX_LIMIT=10000

# Cortex Configuration
ENABLE_CORTEX=true
CORTEX_MODEL=llama3.1-70b  # or later
CORTEX_TIMEOUT=10
CORTEX_MAX_RETRIES=2
CORTEX_CACHE_TTL=300

# Security Settings
VALIDATE_GENERATED_SQL=true
LOG_GENERATED_SQL=true
SHOW_SQL_TO_USERS=true

# Logging
LOG_LEVEL=INFO
ENABLE_ACTIVITY_LOGGING=true
